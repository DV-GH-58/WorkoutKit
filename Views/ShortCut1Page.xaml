<Page
    x:Class="WorkoutKit.Views.ShortCut1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:WorkoutKit"
      xmlns:models="using:WorkoutKit.Models"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:WorkoutKit.Views"
      dev:BreadcrumbNavigator.IsHeaderVisible="True"
      mc:Ignorable="d">

    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                VerticalScrollBarVisibility="Auto">
        
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">

            <dev:SettingsCard ActionIcon="{dev:BitmapIcon Source=Assets/Fluent/External.png}"
                              Description="You can open the WOEnginePage with current settings by clicking this card."
                              Header="WOEnginePage"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Color.png}"
                              IsClickEnabled="True"
                              Command="{x:Bind local:App.Current.NavService.NavigateToCommand}"
                              CommandParameter="{dev:NavigationParameter PageType=views:WOEnginePage, BreadCrumbHeader='Workout'}"/>
            
            <dev:SettingsCard ActionIcon="{dev:BitmapIcon Source=Assets/Fluent/External.png}"
                              Description="Round Workout Pause Startup Exit"
                              Header="1 x 2/3 4;5"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Color.png}"
                              IsClickEnabled="True"
                              Command="{x:Bind ViewModel.Setting}"
                              CommandParameter="1;2;3;4;5"/>

            <dev:SettingsCard ActionIcon="{dev:BitmapIcon Source=Assets/Fluent/External.png}"
                              Description="You can open workout 7 rounds 20 sec 5 sec pause 3 in 10 out by clicking this card."
                              Header="7 x 20/5 3;10"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Color.png}"
                              IsClickEnabled="True"
                              Command="{x:Bind ViewModel.Setting}"
                              CommandParameter="7;20;5;3;10"/>

            <dev:SettingsCard ActionIcon="{dev:BitmapIcon Source=Assets/Fluent/External.png}"
                              Description="You can open workout 7 rounds 50 sec workout by clicking this card."
                              Header="7 x 50"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Color.png}"
                              IsClickEnabled="True"
                              Command="{x:Bind ViewModel.Setting}"
                              CommandParameter="7;50;10;5;20"/>

            <dev:SettingsCard HorizontalContentAlignment="Left" ContentAlignment="Left">
                <StackPanel Orientation="Vertical"
                                    Spacing="5">
                    <TextBlock Text="Related Links" />
                    <HyperlinkButton Content="Source Code"
                                             NavigateUri="https://github.com/Ghost1372/DevWinUI" />
                    <HyperlinkButton Content="Release Notes"
                                             NavigateUri="https://github.com/Ghost1372/DevWinUI/releases" />
                </StackPanel>
            </dev:SettingsCard>

        </StackPanel>
    </ScrollView>
</Page>
