<Page
    x:Class="WorkoutKit.Views.WOEnginePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

            <!--Height="{Binding ElementName=ContentArea, Path=ActualHeight}"
            Width="{Binding ElementName=ContentArea, Path=ActualHeight}"-->
    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Left"  Width="*"/>
            <ColumnDefinition x:Name="Right" Width="1.1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <ProgressRing 
                Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}"
			    HorizontalAlignment="Center"
			    VerticalAlignment="Center"
                Height="{Binding ElementName=Left, Path=ActualWidth}"
                Width="{Binding ElementName=Left, Path=ActualWidth}"
			    IsIndeterminate="False"
			    Maximum="{x:Bind ViewModel.Options.Max_Rounds, Mode=OneWay}"
			    Value="{x:Bind ViewModel.CurrentRound, Mode=OneWay}"/>

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.StatusInfoA, Mode=OneWay}" TextAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
            
        </Grid>
        
        <Grid Grid.Column="1">
            <ProgressRing
                Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}"
			    HorizontalAlignment="Center"
			    VerticalAlignment="Center"
                Height="{Binding ElementName=Right, Path=ActualWidth}"
                Width="{Binding ElementName=Right, Path=ActualWidth}"
			    IsIndeterminate="False"
			    Maximum="{x:Bind ViewModel.PR_Max, Mode=OneWay}"
			    Value="{x:Bind ViewModel.PR_Value, Mode=OneWay}"/>
        
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.PR_Text, Mode=OneWay}" TextAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
