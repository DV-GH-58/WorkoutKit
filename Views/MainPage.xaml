<Page
    x:Class="WorkoutKit.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="using:WorkoutKit.ViewModels"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:WorkoutKit"
    xmlns:views="using:WorkoutKit.Views"
    dev:BreadcrumbNavigator.IsHeaderVisible="True"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <!--The SystemControl
        PageBackgroundChromeLowBrush 
        background represents 
        where you should place your content.
        Place your content here.-->

            <Grid Margin="5" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Slider  Value="{x:Bind ViewModel.MainOptions.Max_Workout, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Maximum="300" Grid.Row="1" Header="Workout time in seconds" Margin="0,40,0,0"/>
                <Slider  Value="{x:Bind ViewModel.MainOptions.Max_Pause  , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Maximum="60"  Grid.Row="2" Header="Rest time in seconds"/>
                <Slider  Value="{x:Bind ViewModel.MainOptions.Max_Rounds , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Maximum="20"  Grid.Row="3" Header="Number of rounds" Margin="0,0,0,50"/>

                <Slider  Value="{x:Bind ViewModel.MainOptions.Startup_Counter , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Maximum="60" Grid.Row="4" Header="End session count"/>
                <Slider  Value="{x:Bind ViewModel.MainOptions.Shutdown_Counter , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Maximum="60" Grid.Row="5" Header="Startup session count"/>

                <TextBox IsEnabled="False"  Text="{x:Bind ViewModel.MainOptions.Max_Workout, Mode=OneWay}" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,40,0,0"/>
                <TextBox IsEnabled="False" Text="{x:Bind ViewModel.MainOptions.Max_Pause  , Mode=OneWay}" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                <TextBox IsEnabled="False" Text="{x:Bind ViewModel.MainOptions.Max_Rounds , Mode=OneWay}" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,50"/>
                <TextBox IsEnabled="False" Text="{x:Bind ViewModel.MainOptions.Startup_Counter, Mode=OneWay}" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                <TextBox IsEnabled="False" Text="{x:Bind ViewModel.MainOptions.Shutdown_Counter, Mode=OneWay}" Grid.Row="5" VerticalAlignment="Top" HorizontalAlignment="Right"/>

                <CommandBar 
                    VerticalContentAlignment="Center"
                    DefaultLabelPosition="Right" 
                    HorizontalAlignment="Left">

                    <!--All your AppBar buttons-->

                    <AppBarButton Icon="Play" Label="Start"
                              Command="{x:Bind ViewModel.Setting}" 
                              CommandParameter="6" />
                    <AppBarSeparator/>

                    <AppBarButton Icon="Favorite" 
                              Label="Fast" 
                              Command="{x:Bind ViewModel.Setting}" 
                              CommandParameter="2" 
                              ToolTipService.ToolTip="20 10" 
                              ToolTipService.Placement="Top"/>

                    <AppBarButton Icon="Favorite" 
                              Label="Default" 
                              Command="{x:Bind ViewModel.Setting}" 
                              CommandParameter="1"
                              ToolTipService.ToolTip="50 10 7"
                              ToolTipService.Placement="Top"/>
                </CommandBar>
            </Grid>
        </StackPanel>
    </ScrollView>
</Page>
